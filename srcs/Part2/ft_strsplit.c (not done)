#include "libft.h"

static size_t count_words(char const *s, char c)
{
	size_t result;

	result = 0;
	while (*s)
	{
		while (*s && *s == c)
		++s;
		if (*s && *s != c)
		++result;
		while (*s && *s != c)
		++s;
	}
	return (result);
}

